@media mq-large
  #header
    height: 400px
    position: relative
    border-bottom: 1px solid color-border
    &:before, &:after
      content: ""
      position: absolute
      left: 0
      right: 0
      height: 40px
    &:before
      top: 0
      background: linear-gradient(rgba(0, 0, 0, 0.2), transparent)
    &:after
      bottom: 0
      background: linear-gradient(transparent, rgba(0, 0, 0, 0.2))

@media mq-tablet
  #banner
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: url(banner-md-url) center #000
    background-size: cover
    z-index: -1

@media mq-mobile
  #mobile-nav
    position: absolute
    top: 0
    left: 0
    width: mobile-nav-width
    height: 100%
    background: color-mobile-nav-background
    border-right: 1px solid #fff

@media mq-mobile
  .mobile-nav-link
    display: block
    color: color-grey
    text-decoration: none
    padding: 15px 20px
    font-weight: bold
    &:hover
      color: #fff

  #banner
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: url(banner-sm-url) center #000
    background-size: cover
    z-index: -1
