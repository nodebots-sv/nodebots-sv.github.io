<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>  
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
    <% if(post.author){ %>
      <a href="<%= (post.author_url) ? post.author_url : '#' %>" rel="external" target="_blank" class="article-author-link">
        por <%= post.author %>
      </a>
    <% } %>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="name">
      <%= post.title %>
    </h1>
      <% if(post.author){ %>
        <a href="<%= (post.author_url) ? post.author_url : '#' %>" rel="external" target="_blank" class="article-author-link">
          por <%= post.author %>
        </a>
      <% } %>      
  <% } %>
<% } %>